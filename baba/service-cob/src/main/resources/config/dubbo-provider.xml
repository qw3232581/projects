<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans.xsd
		http://code.alibabatech.com/schema/dubbo
		http://code.alibabatech.com/schema/dubbo/dubbo.xsd">

    <!-- 搭建Dubbo的服务提供方 -->
    <!-- 1、Dubbo服务方提供方名称 -->
    <dubbo:application name="service-cob" />

    <!-- 2、连接zookeeper注册中心 (如果zookeeper是多台机器用，间隔) -->
    <!--<dubbo:registry address="192.168.57.104:2181" protocol="zookeeper" />-->
    <!-- 不使用注册中心的方式 -->
    <dubbo:registry address="N/A"/>

    <!-- 3、暴露 IP PORT 接口 http://ip:port 默认端口号：20880 -->
    <dubbo:protocol port="20882" name="dubbo" host="192.168.57.1" />


    <!-- 4、暴露 接口   ref="" 使用注解注入时，需要在实现类的Service注解里面起个名字-->
    <dubbo:service interface="com.baba.service.BuyerService" ref="buyerService" />
    <dubbo:service interface="com.baba.service.SessionService" ref="sessionService" />
    <dubbo:service interface="com.baba.service.CartService" ref="cartService" />

    <dubbo:service interface="com.baba.service.OrderService" ref="orderService" />

</beans>
